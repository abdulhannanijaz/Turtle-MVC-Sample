@model Turtle.ORM.uspClanList_Result


<div class="col-md-3 col-sm-6 col-xs-12">
    <div class="thumbnail">
        <div class="pull-right text-justify">
            <a href=@Url.Action("Details", new { id = Model.ClanID})>
                <span class="glyphicon glyphicon-fullscreen text-info"></span>
            </a>
            <a href=@Url.Action("Edit", new { id = Model.ClanID})>
                <span class="glyphicon glyphicon-edit text-warning"></span>
            </a>
            <a href=@Url.Action("Delete", new { id = Model.ClanID})>
                <span class="glyphicon glyphicon-remove text-danger"></span>
            </a>
        </div>
        <img src=@Model.SymbolPic alt=@Model.Name class="img-responsive" />      
        <div class="caption">
            <h2 class="lead text-center text-info">
                @Model.Name
            </h2>
        </div> 
    </div>
  
</div>
