@model TurtleDAL.uspNinjaSelect_Result

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ninja @Model.Name</h4>
    <hr />

 @Html.HiddenFor(model=>model.NinjaGUID.Value)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-10">
                <button type="submit" value="Save" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </button>
                <a href=@Url.Action("Edit","Ninjas", new {guid = Model.NinjaGUID }) class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
                <a href=@Url.Action("List","Ninjas") class="btn btn-default">
                    <span class="glyphicon glyphicon-th-list"></span> List
                </a>
                <a href=@Url.Action("Index","Ninjas") class="btn btn-info">
                    <span class="glyphicon glyphicon-home"></span> Index
                </a>
            </div>
        </div>
    }
</div>
