@model Turtle.ORM.uspClanSelect_Result

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="row">
    <div class="thumbnail">

        <img src=@Url.Content("~/images/" + Model.SymbolPic) alt="Pic" class="img-responsive" />
        <h3 class="text-center lead @{if (Model.IsEvil == false)
                    {@:text-danger
                    }
                    else if (Model.IsEvil == true)
                    {@:text-success
                    }
              }">
            Clan: @Html.DisplayFor(model => model.Name)
        </h3>

        @Html.HiddenFor(model => model.ClanGUID)

        <div class="caption">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-info" })
                </div>
            }
        </div>
    </div>



</div>
